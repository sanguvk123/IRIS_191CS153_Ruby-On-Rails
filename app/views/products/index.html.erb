<h1>Products</h1>


<% @products.each do |product| %>
<div id="wrapper">
<div id="first">
  <div class="image">
    <%= image_tag( product.image, :size => "260x180", :crop => :fill) %>
  </div>
</div>
<div id="second">
  <div class="feild">
    <b><%= link_to product.name, product %></b>
  </div>
  <div class="uploader">
     by <%= product.user.email %>
    <% if product.user == current_user %>
    <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?'} %>
    <% end %>
  </div>
  <div class="text">
    <%= product.description %>
  </div>
  <div class="integer">
    â‚¹<%= product.starting_bid %>.00
    <% if Date.current.midnight < product.deadline %>
    <% if current_user %>
    <%= link_to 'Edit', product %>
    <% end %>
    <% end %>
  </div>
  <div class="contact">
    <%= product.contact %>
  </div>
</div>
</div>
<% end %>
</div>

