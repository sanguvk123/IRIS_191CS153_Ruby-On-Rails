<% @products.each do |product| %>
<%# <% if Date.current.midnight < product.deadline %>
<div id="wrapper">
<div id="first">
  <div class="image">
    <%= image_tag( product.image, :size => "260x180", :crop => :fill) %>
  </div>
</div>
<div id="second">
  <div class="feild">
    <b><%= link_to product.name, product %></b>
  </div>
  claim = <%= product.myproduct %>
  <div class="uploader">
     by <%= product.user.email %>
    <% if product.user == current_user %>
    <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?'} %>
    <% end %>
  </div>
  <div class="text">
    <%= product.description %>
  </div>
  <% if product.claim %>
    Current maximum bidder is Mr. <%= product.claim %>
  <% end %>
  <div class="integer">
    â‚¹<%= product.starting_bid %>.00
    <% if Date.current.midnight < product.deadline %>
    <% if current_user %>
    <%= form_with(model: product, local: true) do |form| %>
    <div class="dropdown">
      <span>Bid</span>
        <div class="dropdown-content">
          <p>
            <%= form.number_field :starting_bid, id: :product_starting_bid, style: 'width: 60%;' %>
            <%= form.submit 'Bid', class: 'button', style: 'width: 35%'%>
          </p>
        </div>
    </div>
    <% end %>
    <% end %>
    <% end %>
  </div>
  <div class="contact">
    <b>For more details contact <%= product.contact %></b>
  </div>
</div>
<div id="third">
  <div class="buttons">
    <% if Date.current.midnight >= product.deadline %>
    <% if current_user and current_user.email == product.claim %>
    <%= form_with(model: product, local: true) do |form| %>
    <%= form.label :claim? %>
    <%= form.check_box :myproduct, id: :product_myproduct %>
    <% end %>
    <% else %>
    <button type="button" disabled class="btn btn-warning">claimed by Mr.<%= product.claim %></button>
    <% end %>
    <% end %>
  </div>
</div>
<div id="fourth">
  <% if Date.current.midnight < product.deadline %>
  <div class="deadline">
    <blink>Deadline <%= product.deadline %></blink>
  </div>
  <% end %>

</div>
</div>
<% end %>
