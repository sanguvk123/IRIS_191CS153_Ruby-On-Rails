<div class="container">
  <div id="grid">
    <div id="gridcell1">
        Join the Iris App community and enjoy Auction
    </div>
    <div id="gridcell2">
      <%= form_with(model: product, local: true) do |form| %>
        <% if product.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

            <ul>
            <% product.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="feild">
          <%= form.label :name %>
          <%= form.text_field :name, id: :product_name, style: 'width: 100%;' %>
        </div>

        <div class="feild">
          <%= form.label :description %>
          <%= form.text_area :description, id: :product_description, style: 'width: 100%;', class: 'description' %>
        </div>

        <div class="feild">
          <%= form.label :starting_bid %>
          <%= form.number_field :starting_bid, id: :product_starting_bid, style: 'width: 100%;' %>
        </div>

        <div class="feild">
          <%= form.label :deadline %><br>
          <%= form.date_select :deadline, id: :product_deadline, style: 'width: 100%;', class: 'date' %>
        </div>

        <div class="feild">
          <%= form.label :contact %>
          <%= form.text_field :contact, id: :product_contact, style: 'width: 100%;' %>
        </div>
        <div class="feild">
          <%= form.label :image %>
          <%= form.file_field :image, id: :product_image, style: 'width: 100%;' %>
        </div>
        <div class="actions">
          <%= form.submit 'Sign Up', class: 'button' %>
        </div>
      <% end %>
      <!-- <div class="terms">
        By clicking “Sign up”, you agree to our terms of service, privacy policy and cookie policy.
      </div> -->
    </div>
  </div>
</div>
