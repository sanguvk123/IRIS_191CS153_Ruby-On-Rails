  <div class="signup-form">
  <%= form_with(model: user, local: true) do |form| %>
    <% if user.errors.any? %>
      <div id="error_explanation">
        <!-- <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2> -->

        <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="field">
      <%= form.label :email %>
    </div>
    <div class="">
      <%= form.text_field :email, id: :user_email, style: 'width: 100%; border-radius:2px; border-shadow:none; border:solid 1px;' %>
    </div>
    <br>
    <div class="field">
      <%= form.label :password%>
    </div>
    <div class="">
      <%= form.password_field :password, id: :user_password, style: 'width: 100%; border-radius:2px; border-shadow:none; border:solid 1px;' %>
    </div>
    <br>
    <div class="field">
      <%= form.label :password_confirmation %>
    </div>
    <div class="">
      <%= form.password_field :password_confirmation, id: :user_password_confirmation, style: 'width: 100%; border-radius:2px; border-shadow:none; border:solid 1px;'  %>
    </div>
    <br>
    <div class="actions">
      <%= form.submit 'Sign Up', class: 'button', style:  'color:white; width: 100%; border-radius:2px; background-color:#1190DA; padding:5px; border-shadow:none; border:solid 1px blue;' %>
    </div>
  </div>
  <% end %>
